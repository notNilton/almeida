{
    "name": "almeida-monorepo",
    "private": true,
    "scripts": {
        "dev": "pnpm -r dev",
        "dev:back-end": "pnpm -F back-end dev",
        "dev:back-office": "pnpm -F back-office dev",
        "dev:front-end": "pnpm -F front-end dev",
        "build": "pnpm -r build",
        "lint": "pnpm -r lint",
        "prisma": "pnpm -F back-end prisma",
        "prisma:generate": "pnpm -F back-end prisma generate",
        "prisma:migrate": "pnpm -F back-end prisma migrate dev",
        "prisma:studio": "pnpm -F back-end prisma studio",
        "prisma:deploy": "pnpm -F back-end prisma migrate deploy",
        "prisma:reset": "pnpm -F back-end prisma migrate reset",
        "prisma:seed": "pnpm -F back-end prisma db seed"
    },
    "devDependencies": {
        "turbo": "latest"
    }
}