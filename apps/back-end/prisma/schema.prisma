generator client {
  provider      = "prisma-client-js"
  engineType    = "library"
  output        = "../../../node_modules/.prisma/client"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
  VIEWER
}

enum UserStatus {
  PENDING
  ACTIVE
  INACTIVE
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
}

enum DocumentType {
  ACCOUNT_OPENING
  PRESENTATION_LETTER
  TRANSPORT_VOUCHER
  SUBSTITUTION_FORM
  CLOSING_COMMUNICATION
  EARLY_TERMINATION_COMMUNICATION
  RENEWAL_COMMUNICATION
  PAYSLIP
  OTHER
}

enum DocumentStatus {
  PENDING
  PROCESSED
  ERROR
}

model User {
  id        String     @id
  email     String     @unique
  password  String
  name      String?
  role      UserRole   @default(VIEWER)
  status    UserStatus @default(PENDING)
  avatarId  String?    @unique @map("avatar_id")
  avatar    Upload?    @relation(fields: [avatarId], references: [id])
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  @@map("users")
}

model Employee {
  id           String         @id
  name         String
  cpf          String         @unique
  registration String?        @unique
  status       EmployeeStatus @default(ACTIVE)
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  contracts Contract[]
  documents Document[]

  @@map("employees")
}

model Contract {
  id         String    @id
  employeeId String    @map("employee_id")
  employee   Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  type       String
  startDate  DateTime  @map("start_date")
  endDate    DateTime? @map("end_date")
  status     String    @default("ACTIVE")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  @@map("contracts")
}

model Document {
  id         String         @id
  name       String
  type       DocumentType   @default(OTHER)
  status     DocumentStatus @default(PENDING)
  employeeId String?        @map("employee_id")
  employee   Employee?      @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  uploadId   String         @unique @map("upload_id")
  upload     Upload         @relation(fields: [uploadId], references: [id])
  ocrData    Json?          @map("ocr_data")
  createdAt  DateTime       @default(now()) @map("created_at")
  updatedAt  DateTime       @updatedAt @map("updated_at")

  @@map("documents")
}

model Upload {
  id           String   @id
  filename     String   @unique
  originalName String   @map("original_name")
  mimetype     String
  size         Int
  url          String
  createdAt    DateTime @default(now()) @map("created_at")

  document Document?
  user     User?

  @@map("uploads")
}

model AuditLog {
  id         String   @id
  userId     String   @map("user_id")
  action     String
  entityType String   @map("entity_type")
  entityId   String   @map("entity_id") // Alterado para String para bater com os novos IDs
  payload    String?
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("audit_logs")
}

model Setting {
  key   String @id
  value String

  @@map("settings")
}
