generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
  VIEWER
}

enum UserStatus {
  PENDING
  ACTIVE
  INACTIVE
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
}

enum DocumentType {
  ACCOUNT_OPENING
  PRESENTATION_LETTER
  TRANSPORT_VOUCHER
  SUBSTITUTION_FORM
  CLOSING_COMMUNICATION
  EARLY_TERMINATION_COMMUNICATION
  RENEWAL_COMMUNICATION
  PAYSLIP
  OTHER
}

enum DocumentStatus {
  PENDING
  PROCESSED
  ERROR
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  name      String?
  role      UserRole   @default(VIEWER)
  status    UserStatus @default(PENDING)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("users")
}

model Employee {
  id           Int            @id @default(autoincrement())
  name         String
  cpf          String         @unique
  registration String?        @unique
  status       EmployeeStatus @default(ACTIVE)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  contracts Contract[]
  documents Document[]

  @@map("employees")
}

model Contract {
  id         Int       @id @default(autoincrement())
  employeeId Int
  employee   Employee  @relation(fields: [employeeId], references: [id])
  type       String
  startDate  DateTime
  endDate    DateTime?
  status     String    @default("ACTIVE")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("contracts")
}

model Document {
  id         Int            @id @default(autoincrement())
  name       String
  type       DocumentType   @default(OTHER)
  status     DocumentStatus @default(PENDING)
  employeeId Int?
  employee   Employee?      @relation(fields: [employeeId], references: [id])
  uploadId   Int            @unique
  upload     Upload         @relation(fields: [uploadId], references: [id])
  ocrData    Json?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  @@map("documents")
}

model Upload {
  id           Int      @id @default(autoincrement())
  filename     String   @unique
  originalName String
  mimetype     String
  size         Int
  url          String
  createdAt    DateTime @default(now())

  document Document?

  @@map("uploads")
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  userId     Int
  action     String
  entityType String
  entityId   Int
  payload    String?
  createdAt  DateTime @default(now())

  @@map("audit_logs")
}
